
# Configuration de la base de données
DATABASE_URL="postgresql://user:password@localhost:5432/proofcert?schema=public"

# URL de l'API (doit correspondre à l'URL de votre serveur backend)
VITE_API_BASE_URL="http://localhost:3001"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Clé secrète pour les JWT (générer une chaîne aléatoire sécurisée)
JWT_SECRET="votre_clé_secrète_très_longue_et_sécurisée"

# Configuration IPFS
VITE_IPFS_GATEWAY="https://ipfs.io/ipfs/"
VITE_WEB3_STORAGE_TOKEN=""  # Optionnel : token pour web3.storage

# Configuration de géolocalisation (optionnel)
VITE_GEONAMES_USERNAME=""  # Optionnel : nom d'utilisateur pour l'API Geonames

# Configuration de l'application
VITE_APP_NAME="ProofCert"
VITE_APP_VERSION="1.0.0"
NODE_ENV="development"

# Configuration du port du serveur (optionnel)
PORT=3001

# Configuration IPFS (optionnel)
IPFS_API_URL="/ip4/127.0.0.1/tcp/5001"
IPFS_GATEWAY_URL="https://ipfs.io/ipfs/"

# Configuration des logs (optionnel)
DEBUG="proofcert:*,prisma:query"

# Configuration CORS (optionnel)
CORS_ORIGIN="http://localhost:5173,http://localhost:3000"

# Configuration du taux limite (rate limiting) - optionnel
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # 100 requêtes par fenêtre

# Configuration de la session (optionnel)
SESSION_SECRET="votre_clé_secrète_de_session"
SESSION_MAX_AGE=86400000  # 24 heures en millisecondes

# Configuration de l'email (optionnel)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user@example.com"
SMTP_PASSWORD="votre_mot_de_passe_smtp"
SMTP_FROM="no-reply@proofcert.app"

# Configuration du frontend (optionnel)
VITE_GOOGLE_ANALYTICS_ID=""  # Optionnel : ID Google Analytics
